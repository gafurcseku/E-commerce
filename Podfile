# Uncomment the next line to define a global platform for your project
# platform :ios, '9.0'

target 'Dhamaka' do
  # Comment the next line if you don't want to use dynamic frameworks
  use_frameworks!

  # Pods for Dhamaka
  
  #Pods for PageControl
  pod 'CHIPageControl/Jaloro'
  pod 'CHIPageControl/Jalapeno'
  
  #Pod for Sider Menu
  pod 'SideMenuSwift'
  
  #pod for GraphQL
  pod "Apollo"
  pod "Apollo/SQLite"
  
  #pod for Progress indicator
  pod 'SVProgressHUD'
  
  #pod for Json parse
  pod 'SwiftyJSON', '~> 4.0'
  
  
  #Pod for async image downloader with cache support
  pod 'SDWebImage', '~> 5.0'
  
  pod "GoneVisible"
  
  pod 'SkyFloatingLabelTextField'
  

  # Pod for SQLite Database
  pod 'SQLite.swift'

  #SegmentedScrollView
  pod ’SJSegmentedScrollView’

  pod 'ValueStepper'
  
  target 'DhamakaTests' do
    inherit! :search_paths
    # Pods for testing
  end

  target 'DhamakaUITests' do
    # Pods for testing
  end

end
